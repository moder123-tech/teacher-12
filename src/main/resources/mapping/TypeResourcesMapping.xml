<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.teacher.dao.TypeResourcesDao">

    <sql id="Resources" >
        r_id,r_path,r_content,r_label
    </sql>


    <select id="getTypeResources" resultType="cn.com.teacher.bean.Resources">
        select
        <include refid="Resources" />
        from Resources
        <where>
            <if test="r_label != null">
                r_label=#{r_label,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
</mapper>